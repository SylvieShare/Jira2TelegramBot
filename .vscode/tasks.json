{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Bot",
            "type": "shell",
            "command": "go",
            "args": ["run", "cmd/bot/main.go"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Build Bot",
            "type": "shell",
            "command": "go",
            "args": ["build", "-o", "bin/bot", "cmd/bot/main.go"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$go"
        }
    ]
}